


<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>A.B.C.</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<% if(user){ %>
  <h1>Welcome to Auto Buddy Wash <%= user.name %>!</h1>

  <a href="/logout">Log Out</a>
  <a href="/cars/new">Add a car</a>
  <body>
    <h2>My Vehicles</h2>
    <table>
        <thead>
          <tr>
            <th>Year</th>
            <th>Make</th>
            <th>Model</th>
            <th>Color</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody>
          <% cars.forEach(function(car) { %>
            <tr>
              <td><%= car.year %></td>
              <td><%= car.make %></td>
              <td><%= car.model %></td>
              <td><%= car.color %></td>
              <td><%= car.typeOfVehicle %></td>
              <td><a class="carEdit" href="cars/:id/new">Edit</a></td>
              <td><a class="requestEdit" href="">Request Service</a></td>

            </tr>
          <% }); %>
        </tbody>
  </body>
  
<% } else { %>
<p>please log in to continue</p>
<% } %>

</html>